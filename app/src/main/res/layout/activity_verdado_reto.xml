<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerdadoRetoCasoInicial">

    <Button
        android:id="@+id/VerdadButton"
        android:layout_width="154dp"
        android:layout_height="129dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="419dp"
        android:layout_marginBottom="264dp"
        android:text="V"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="V" />

    <Button
        android:id="@+id/RetoButton"
        android:layout_width="154dp"
        android:layout_height="129dp"
        android:layout_marginTop="419dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="264dp"
        android:text="R"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/SiguienteJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="220dp"
        android:text="Siguiente Jugador:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/VerdadButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Siguiente Jugador:" />

    <TextView
        android:id="@+id/Jugador"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="122dp"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/VerdadButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SiguienteJugador" />
</androidx.constraintlayout.widget.ConstraintLayout>