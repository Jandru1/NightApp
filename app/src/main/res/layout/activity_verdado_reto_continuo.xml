<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerdadoRetoContinuo">

    <TextView
        android:id="@+id/JugadorSiguiente"
        android:layout_width="107dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="364dp"
        android:text="Siguiente:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/retoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857"
        tools:text="Siguiente:" />

    <Button
        android:id="@+id/retoButton"
        android:layout_width="154dp"
        android:layout_height="129dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="419dp"
        android:layout_marginBottom="264dp"
        android:text="R"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/verdadButton"
        android:layout_width="154dp"
        android:layout_height="129dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="419dp"
        android:layout_marginBottom="264dp"
        android:text="V"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="V" />

    <TextView
        android:id="@+id/nada"
        android:layout_width="107dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="364dp"
        android:text="Siguiente:"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/retoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857"
        tools:text="Siguiente:" />

    <TextView

        android:id="@+id/RetoOVerdad"
        android:gravity="center"
        android:layout_width="356dp"
        android:layout_height="219dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nada" />

    <TextView
        android:id="@+id/JugadorJugando"
        android:layout_width="167dp"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="44dp"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/RetoOVerdad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JugadorSiguiente" />

</androidx.constraintlayout.widget.ConstraintLayout>