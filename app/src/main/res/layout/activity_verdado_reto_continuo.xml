<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerdadoRetoContinuo">

    <TextView
        android:id="@+id/nada"
        android:layout_width="121dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="72dp"
        android:text="Siguiente:"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/JugadorJugando"
        app:layout_constraintEnd_toStartOf="@+id/JugadorSiguiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Siguiente:" />

    <TextView
        android:id="@+id/JugadorSiguiente"
        android:layout_width="109dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="139dp"
        android:text="Siguiente:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nada"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Siguiente:" />

    <Button
        app:backgroundTint="#353535"
        android:textColor="@color/white"
        android:id="@+id/retoButton"
        android:layout_width="154dp"
        android:layout_height="129dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="419dp"
        android:layout_marginBottom="264dp"
        android:text="R"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        app:backgroundTint="#353535"
        android:textColor="@color/white"
        android:id="@+id/verdadButton"
        android:layout_width="154dp"
        android:layout_height="129dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="419dp"
        android:layout_marginBottom="264dp"
        android:text="V"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="V" />

    <TextView
        android:id="@+id/RetoOVerdad"
        android:layout_width="365dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nada" />


    <TextView
        android:id="@+id/JugadorJugando"
        android:layout_width="167dp"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="44dp"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/RetoOVerdad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JugadorSiguiente"
        app:layout_constraintVertical_bias="0.666" />

    <ImageView
        android:id="@+id/HomeButton"
        android:layout_width="118dp"
        android:layout_height="104dp"
        android:layout_marginTop="171dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/retoButton"
        app:srcCompat="@drawable/circle_cropped__1_" />

</androidx.constraintlayout.widget.ConstraintLayout>